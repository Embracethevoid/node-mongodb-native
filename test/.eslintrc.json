{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier", "promise"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": "error",

    "no-console": "off",
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "strict": ["error", "global"],
    "promise/no-native": "off"
  }
}
